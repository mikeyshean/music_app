<h1>New Album</h1>

<p>
  <a href="<%= band_url(@band) %>">Back to <%= @band.name %></a>
</p>

<form action="<%= albums_url %>" method="post">
  <%= authenticity_token %>

  <p><label for="album_band"> Band: </label></p>
    <select name="album[band_id]" id="album_band">

    <% @bands.each do |band| %>
      <option value="<%= band.id %>" <%= "selected" if band == @band %>><%= band.name  %></option>
    <% end %>
  </select>
  <br>


  <p><label for="album_name">Album: </label></p>
  <input
    type="text"
    name="album[name]"
    id="album_name"
    value="<%= @album.name %>">
  <br>

  <p><label for="album_style">Type: </label></p>
  <% Album::STYLES.each do |style| %>
    <input
      type="radio"
      name="album[style]"
      id="album_style"
      value="<%= style %>"> <%= style.capitalize %>
  <% end %>
  <br>


  <p><button>Submit</button></p>
</form>
